<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:custom="http://schemas.android.com/apk/res/es.deusto.deustotech.dynamicui"
  android:id="@+id/default_layout"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:columnCount="1"
  android:orientation="horizontal"
  android:rowCount="3" >
  
    <es.deusto.deustotech.dynamicui.components.ProxyView
        widget="Button"
        android:id="@+id/mybutton"
        custom:showText="true"
        custom:text="@string/mybutton"
        android:text="@string/mybutton"
        android:onClick="toast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_gravity="center_horizontal"
        />
    
    <es.deusto.deustotech.dynamicui.components.ProxyView
        widget="TextView"
        android:id="@+id/mytexview"
        custom:showText="true"
        custom:text="@string/mytextview"
        android:text="@string/mytextview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_gravity="center_horizontal"
        />
    
   <es.deusto.deustotech.dynamicui.components.ProxyView
        widget="EditText"
        android:id="@+id/myedittext"
        custom:showText="true"
        custom:text="@string/myedittext"
        android:text="@string/myedittext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="2"
        android:layout_gravity="center_horizontal"
        />
</GridLayout>